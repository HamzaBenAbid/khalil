<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/yallow"
        tools:context=".Noisyoperation">


    <TableLayout
            android:divider="@color/red"
            android:showDividers="middle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:stretchColumns="1">
        <TableRow
                android:divider="@color/red"

                android:showDividers="none"/>
        <TableRow
                android:divider="@color/red"

                android:showDividers="middle">
            <TextView
                    android:text="@string/Itemstocheck"
                    android:padding="3dip"
                    android:textStyle="bold"/>
            <TextView
                    android:text="@string/Solution"
                    android:gravity="left"
                    android:padding="3dip"
                    android:textStyle="bold"/>
        </TableRow>

        <TableRow
                android:divider="@color/red"
                android:showDividers="middle">
            <TextView
                    android:text="Worn bearings"
                    android:padding="3dip"/>
            <TextView
                    android:text="Replace motor"
                    android:padding="3dip"/>
        </TableRow>
        <TableRow
                android:divider="@color/red"
                android:showDividers="middle">
            <TextView
                    android:text="Shock mount/float mount problems"
                    android:padding="3dip"/>
            <TextView
                    android:text="Check for obstructions, over/under inflation, or breakage; adjust or replace"
                    android:padding="3dip"/>
        </TableRow>
        <TableRow
                android:divider="@color/red"
                android:showDividers="middle">
            <TextView
                    android:text="Loose or cracked motor mounts"
                    android:padding="3dip"/>
            <TextView
                    android:text="Re-torque and/or replace motor"
                    android:padding="3dip"/>
        </TableRow>
        <TableRow
                android:divider="@color/red"
                android:showDividers="middle">
            <TextView
                    android:text="Shipping brackets not removed"
                    android:padding="3dip"/>
            <TextView
                    android:text="Remove the brackets"
                    android:padding="3dip"/>
        </TableRow>
        <TableRow
                android:divider="@color/red"
                android:showDividers="middle">
            <TextView
                    android:text="Damaged or cracked shale shaker basket"
                    android:padding="3dip"/>
            <TextView
                    android:text="Repair or replace after checking with manufacturer"
                    android:padding="3dip"/>
        </TableRow>
        <TableRow
                android:divider="@color/red"
                android:showDividers="middle">
            <TextView
                    android:text="Object leaning against or bumping shaker basket"
                    android:padding="3dip"/>
            <TextView

                    android:text="Remove object or reposition to prevent damage"
                    android:padding="3dip"/>
        </TableRow>
        <TableRow
                android:divider="@color/red"

                android:showDividers="none"/>
    </TableLayout>


</LinearLayout>